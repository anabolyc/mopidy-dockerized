{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "unconfig buildx",
            "type": "shell",
            "group": "build",
            "command": "docker buildx rm mybuilder",
            "problemMatcher": []
        },
        {
            "label": "config buildx",
            "type": "shell",
            "group": "build",
            "command": "docker run --privileged --rm tonistiigi/binfmt --install all && docker buildx create --use --name mybuild",
            "problemMatcher": []
        },
        {
            "label": "docker build",
            "type": "shell",
            "command": "docker build -t $(cat tag) .",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "docker buildx",
            "type": "shell",
            "command": "docker buildx build --platform linux/arm/v7,linux/arm64,linux/amd64 --tag $(cat tag) .",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "docker buildx & push",
            "type": "shell",
            "command": "docker buildx build --platform linux/arm/v7,linux/arm64,linux/amd64 -t $(cat tag) . --push",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "docker run",
            "type": "shell",
            "command": "docker run --name mopidy-dev --rm -ti -v /mnt-auto/cifs/muzlo:/mopidy/media:ro -p 6600:6600 -p 6680:6680 -e AUDIO_OUTPUT=\"pulsesink server=192.168.1.85\" -e MOPIDY_PARAMS=\"-o audio/mixer_volume=50 -o audio/mixer=software\" $(cat tag)",
            "problemMatcher": []
        },
        {
            "label": "docker run bash",
            "type": "shell",
            "command": "docker run --rm -ti --entrypoint=/bin/bash $(cat tag)",
            "problemMatcher": []
        },
        {
            "label": "docker attach",
            "type": "shell",
            "command": "docker exec -ti mopidy-dev /bin/bash",
            "problemMatcher": []
        },
        {
            "label": "docker push",
            "type": "shell",
            "command": "docker push $(cat tag)",
            "problemMatcher": []
        }
    ]
}